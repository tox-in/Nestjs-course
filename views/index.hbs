<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <h1>ToDo App</h1>
    <nav>
      <a href='/'>Home</a>
      <a href='/todos'>Go to ToDo List</a>
    </nav>
    <div class='container'>
      {{{body}}}
      <h1>{{title}}</h1>
      <ul>
        {{#each todos}}
          <li>{{this.title}} - {{this.description}}</li>
        {{/each}}
      </ul>
    </div>
  </body>
</html>